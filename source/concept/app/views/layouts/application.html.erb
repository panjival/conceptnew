              <i class="fas fa-users"></i><span> Murid </span>
              <% end %>
          </li>
          <li>
              <%= link_to jkindex_path do %>
              <i class="fas fa-book"></i><span> Jenis Kursus </span>
              <% end %>
          </li>
          <li>
              <%= link_to insindex_path do %>
