                  <li class="user-header">
                    <p> hello <%= current_user.userid %>
                      <small>Semangat</small>
                    </p>
                  </li>
                  <span>
                  <li class="user-footer">
                    <div class="pull-right">
                      <%= link_to 'Sign out', session_path('active'), method: :delete, class:'btn btn-danger' %>
                    </div>
                  </li>
                  <li class="user-footer">
                    <div class="pull-left">
                      <%= link_to 'Sign up', new_user_path, class:'btn btn-info' %>
                    </div>
                  </li>
                  </span>
                </ul>
          <% else %>
            <li class="nav-item"><%=link_to 'Sign in', new_session_path, class:'active_nav-link'%>
            </li>
          </li>
          <% end %>
          </ul>
        </div>
          <%# #  ------------------------------- end menu for logout--------------------- %>

      </nav>
    </header>
    <aside class="main-sidebar">
      <section class="sidebar" style="height: auto;">
        <%# <form action="#" method="get" class="sidebar-form">
