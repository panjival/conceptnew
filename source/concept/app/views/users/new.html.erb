<%= form_for @user do |f| %>
<%# start cek error %>
<% if @user.errors.any? %>
    <h2><%= pluralize(@user.errors.count, "error") %>, silakan periksa kembali!:</h2>
<p>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
    <li>
        <%= msg %>
    </li>
<% end %>
    </ul>
</p>
    <% if alert %>
    <%= alert%>
<% end %>
<% end %> 
<!-- end cek error -->

<div class="modal-dialog text-center">
<div class="col-sm-8 main-section">
<h1>Create Account</h1>
<div class="form-group">
<%= f.text_field :userid, placeholder: 'Username', class:'form-control'%>
</div>
<div class="form-group">
<%= f.email_field :email, placeholder: 'Email', class:'form-control' %>
</div>
<div class="form-group">
<%= f.password_field :password, placeholder: 'Password', class:'form-control' %>
</div>
<div class="form-group">
<%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class:'form-control'%>
</div>
<%= button_tag( :class => "btn btn-primary") do %>
Add <i class="fas fa-user-plus"></i>
<% end %>
<% end %>
</div>
</div>